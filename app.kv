#:include widgets.kv

<Manager>:
    MainWindow:
        name: 'main'

    ProblemWindow:
        name: 'problem'

    CameraWindow:
        name: 'camera'

    InputNumberManuallyScreen:
        name: 'input_number_manually'

    ResultsWindow:
        name: 'results'

    SettingsWindow:
        name: 'settings'

<CameraWindow>:
    name: 'camera'

    ScanCamera:
        id: scan_camera

    GrayButton:
        id: goback
        text: 'Exit'
        pos_hint: {'center_x': 0.5, 'y': 0.0}
        size_hint: (0.2, 0.1)
        on_press: 
            root.manager.go_to_main_screen()

<MainWindow>:
    Logo:
        id: logo_image
        pos_hint: {'center_x': 0.5, 'y': 0.7}

    GrayButton:
        id: search_by_scanning
        text: 'Scan'
        size_hint: (0.2, 0.1)
        pos_hint: {'center_x': 0.3, 'y': 0.6}
        on_press: 
            root.manager.go_to_camera_screen()

    GrayButton:
        id: search_by_inputting
        text: 'Input'
        size_hint: (0.2, 0.1)
        pos_hint: {'center_x': 0.7, 'y': 0.6}
        on_press: 
            root.manager.go_to_input_number_manually_screen()

    GrayButton:
        id: goto_settings
        text: 'Settings'
        size_hint: (0.2, 0.1)
        pos_hint: {'center_x': 0.5, 'y': 0.3}
        on_press: 
            root.manager.go_to_settings_screen()

    GrayButton:
        id: exit_button
        text: 'Exit'
        size_hint: (0.2, 0.1)
        pos_hint: {'center_x': 0.5, 'y': 0.1}
        on_press: 
            app.get_running_app().stop()

<SettingsWindow>:
    BigLabel:
        id: price_strategy_label
        text: 'choose default price difference from average:'
        pos_hint: {'center_x': 0.5, 'y': 0.9}

    GridLayout:
        id: price_strategy_layout
        rows: 1
        cols: 4
        size_hint: (0.8, 0.1)
        pos_hint: {'center_x': 0.5, 'y': 0.8}

        PriceStrategyToggleButton:
            id: set_0_percent_price_strategy
            text: '-0%'
            save_in_settings: 'state'

        PriceStrategyToggleButton:
            id: set_10_percent_price_strategy
            text: '-10%'
            save_in_settings: 'state'

        PriceStrategyToggleButton:
            id: set_20_percent_price_strategy
            text: '-20%'
            save_in_settings: 'state'

        PriceStrategyToggleButton:
            id: set_40_percent_price_strategy
            text: '-40%'
            save_in_settings: 'state'

    BigLabel:
        id: sell_strategy
        text: 'choose sell strategy'
        pos_hint: {'center_x': 0.5, 'y': 0.7}

    GridLayout:
        id: sell_strategy_layout
        rows: 2
        cols: 3
        size_hint: (0.7, 0.1)
        pos_hint: {'center_x': 0.5, 'y': 0.6}

        BigLabel:
            id: sell_strategy_label
            text: 'Sell as:'

        SellAsToggleButton:
            id: used_true
            text: 'used'
            state: 'down'
            save_in_settings: 'state'

        SellAsToggleButton:
            id: used_false
            text: 'new'
            save_in_settings: 'state'

        BigLabel:
            id: buynow_strategy_label
            text: 'Allow Buy Now'

        BuyNowToggleButton:
            id: buynow_true
            text: 'yes'
            state: 'down'
            save_in_settings: 'state'

        BuyNowToggleButton:
            id: buynow_false
            text: 'no'
            save_in_settings: 'state'

    BigLabel:
        id: delivery_strategy_label
        text: 'choose delivery options'
        pos_hint: {'center_x': 0.5, 'y': 0.5}

    GridLayout:
        id: delivery_strategy_layout
        rows: 3
        cols: 5
        size_hint: (0.8, 0.3)
        pos_hint: {'center_x': 0.5, 'y': 0.2}
 
        SetDeliveryCheckBox:
            id: parcellocker_true
            size_hint_x: 0.1
            save_in_settings: 'active'

        BigLabel:
            id: parcellocker_delivery_label
            size_hint_x: 0.4
            text: 'Parcellocker'

        SetLessPriceButton:
            on_press: 
                root.change_price('parcellocker', -1)

        BigLabel:
            id: parcellocker_delivery_price
            size_hint_x: 0.4
            text: '10.00 PLN'
            save_in_settings: 'text'

        SetMorePriceButton:
            on_press: 
                root.change_price('parcellocker', 1)

        SetDeliveryCheckBox:
            size_hint_x: 0.1
            id: courier_true
            save_in_settings: 'active'

        BigLabel:
            id: courier_delivery_label
            size_hint_x: 0.4
            text: 'Courier'

        SetLessPriceButton:
            on_press: 
                root.change_price('courier', -1)

        BigLabel:
            id: courier_delivery_price
            text: '10.00 PLN'
            save_in_settings: 'text'

        SetMorePriceButton:
            on_press: 
                root.change_price('courier', 1)

        SetDeliveryCheckBox:
            id: mail_true
            size_hint_x: 0.1
            save_in_settings: 'active'

        BigLabel:
            id: mail_delivery_label
            text: 'Mail'

        SetLessPriceButton:
            on_press: 
                root.change_price('mail', -1)

        BigLabel:
            id: mail_delivery_price
            text: '10.00 PLN'
            save_in_settings: 'text'

        SetMorePriceButton:
            on_press: 
                root.change_price('mail', 1)

    GrayButton:
        id: goback
        text: 'Save and Proceed'
        pos_hint: {'center_x': 0.5, 'y': 0.0}
        size_hint: (0.2, 0.1)
        on_press: 
            root.manager.go_back_from_settings_screen()

<ResultsWindow>:
    ISBNLabel:
        id: sales_number_label
        text: 'ISBN: 1234567890123'
        pos_hint: {'center_x': 0.5, 'y': 0.8}

    GridLayout:
        id: results_layout
        rows: 4
        cols: 2
        size_hint: (0.8, 0.5)
        pos_hint: {'center_x': 0.5, 'y': 0.3}

        BigLabel:
            id: title_label
            text: 'title:'

        BigLabel:
            id: title_content
            text: ''

        BigLabel:
            id: author_label
            text: 'title:'

        BigLabel:
            id: author_content
            text: ''

        BigLabel:
            id: avg_prices_label
            text: 'avg. price:'

        BigLabel:
            id: avg_prices_content
            text: ''

        BigLabel:
            id: sold_copies_label
            text: 'sold copies:'

        BigLabel:
            id: sold_copies_content
            text: ''

    GridLayout:
        id: hourglasses_layout
        rows: 4
        cols: 1
        size_hint: (0.4, 0.5)
        pos_hint: {'center_x': 0.7, 'y': 0.3}

        HourglassImage:
            id: title_hourglass

        HourglassImage:
            id: author_hourglass

        HourglassImage:
            id: avg_prices_hourglass

        HourglassImage:
            id: sold_copies_hourglass

    GridLayout:
        id: buttons_layout
        rows: 1
        cols: 2
        size_hint: (0.8, 0.1)
        pos_hint: {'center_x': 0.5, 'y': 0.1}

        GrayButton:
            id: goback_button
            text: 'Go Back'
            on_press: 
                root.manager.go_back_from_results_screen()

        GrayButton:
            id: sell_button
            text: 'Sell!'
            disabled: True

<InputNumberManuallyScreen>:
    id: search_layout_main

    ISBNLabel:
        id: isbn_number_label
        text: '9781617293702'
        pos_hint: {'center_x': 0.5, 'y': 0.7}

    BigLabel:
        id: message_label
        text: 'type ISBN number'
        pos_hint: {'center_x': 0.5, 'y': 0.5}

    GridLayout:
        id: keyboard_input_layout
        size_hint: (0.8, 0.4)
        pos_hint: {'center_x': 0.5, 'y': 0.1}
        rows: 4
        cols: 3

        InputNumberButton:
            text: '1'
            on_press: 
                root.input_number(1)

        InputNumberButton:
            text: '2'
            on_press: 
                root.input_number(2)

        InputNumberButton:
            text: '3'
            on_press: 
                root.input_number(3)

        InputNumberButton:
            text: '4'
            on_press: 
                root.input_number(4)

        InputNumberButton:
            text: '5'
            on_press: 
                root.input_number(5)

        InputNumberButton:
            text: '6'
            on_press: 
                root.input_number(6)

        InputNumberButton:
            text: '7'
            on_press: 
                root.input_number(7)

        InputNumberButton:
            text: '8'
            on_press: 
                root.input_number(8)

        InputNumberButton:
            text: '9'
            on_press: 
                root.input_number(9)

        InputNumberButton:
            text: 'Del'
            on_press: 
                root.delete_last_number()

        InputNumberButton:
            text: '0'
            on_press: 
                root.input_number(0)

        InputNumberButton:
            id: run
            text: 'Go!'
            disabled: False
            on_press: 
                root.manager.order_find_query(root.ids.isbn_number_label.text)

    GrayButton:
        id: goback
        size_hint: (0.1, 0.1)
        pos_hint: {'center_x': 0.85, 'y': 0.9}
        text: 'X'
        on_press: 
            root.manager.go_to_main_screen()

<ProblemWindow>:
    ProblemImage:
        id: problem_image
        size_hint: (0.2, 0.2)
        pos_hint: {'center_x': 0.5, 'y': 0.6}

    BigLabel:
        id: problem_layout_message
        text: 'Unknown poblem occured!'
        multiline: True
        pos_hint: {'center_x': 0.5, 'y': 0.4}

    GrayButton:
        id: goback
        text: 'go back'
        size_hint: (0.5, 0.1)
        pos_hint: {'center_x': 0.5, 'y': 0.1}
        on_press: 
            root.manager.go_to_main_screen()
