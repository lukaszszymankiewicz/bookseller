<MyScreenManager>:
    SearchWindow:
    WaitWindow:
    ResultsWindow:

<ResultsWindow>:
    name: 'results'
    orientation: 'vertical'

    canvas:
        Color:
            rgb: (0.5, 0.5, 0.6)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        Label:
            id: title
            text: 'jebac psy'

        Label:
            id: author
            text: 'Pezet'

        Label:
            id: avg_prices
            text: '0.0'

        Label:
            id: sales_number
            text: '69'

<WaitWindow>:
    name: 'wait'
    orientation: 'vertical'

    canvas:
        Color:
            rgb: (1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size

    Image:
        source: 'small_wait.png'
        allow_stretch: False
        keep_ratio: True
        size: self.texture_size

<SearchWindow>:
    name: 'search'
    orientation: 'vertical'

    canvas:
        Color:
            # TODO: this color is ugly XD
            rgba: 104/255, 177/255, 162/255, 1.0
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.1

        Label:
            text: 'input ISBN'
            font_size: 20

    BoxLayout:
        orientation: 'horizontal'

        TextInput:
            id: isbn_number
            valign: 'middle'
            halign: 'left'
            # this is for texting ONLY!
            hint_text: '9781449340377'
            font_size: 20
            size_hint_y: 0.1
            size_hint_x: 0.9

        Button:
            text: 'send'
            font_size: 20
            size_hint_x: 0.1
            size_hint_y: 0.1
            on_press: 
                app.root.current = 'wait'
