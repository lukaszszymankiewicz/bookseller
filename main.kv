<MyScreenManager>:
    SearchWindow:
    WaitWindow:
    ResultsWindow:
    ProblemWindow:

<ResultsWindow>:
    name: 'results'
    orientation: 'vertical'

    canvas:
        Color:
            rgba: 0.0, 0.0, 0.0, 1.0
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        id: results_layout_labels_layout
        rows: 4
        cols: 2
        size_hint_y: 0.5
        size_hint_x: 0.5
        pos_hint: {'center_x':0.5, 'y': 0.4}

        Label:
            id: title_label
            text: 'title:'
            font_size: 20

        Label:
            id: title
            text: 'jebac psy'
            font_size: 20

        Label:
            id: author_label
            text: 'title:'
            font_size: 20

        Label:
            id: author
            text: 'Pezet'
            font_size: 20

        Label:
            id: avg_prices_label
            text: 'avg. price:'
            font_size: 20

        Label:
            id: avg_prices
            text: '0.0'
            font_size: 20

        Label:
            id: sales_number_label
            text: 'sold:'
            font_size: 20

        Label:
            id: sales_number
            text: '69'
            font_size: 20

    BoxLayout:
        id: results_layout_buttons_layout
        orientation: 'horizontal'
        size_hint_y: 0.1
        size_hint_x: 0.5
        pos_hint: {'center_x':0.5, 'y': 0.2}

        Button:
            id: results_layout_goback_button
            text: 'Go Back'
            font_size: 20
            on_press: 
                root.goback()

        Button:
            id: results_layout_sell_button
            text: 'Sell!'
            font_size: 20
            disabled: True
            on_press: 
                root.sell()

<WaitWindow>:
    name: 'wait'
    orientation: 'vertical'

    canvas:
        Color:
            rgba: 0.0, 0.0, 0.0, 1.0
        Rectangle:
            pos: self.pos
            size: self.size
    Image:
        id: wait_layout_wait_image
        source: 'static/wait.gif'
        anim_delay: 0.1
        anim_loop: 5
        allow_stretch: False
        size_hint_y: 0.1
        size_hint_x: 0.1
        pos_hint: {'center_x':0.5, 'center_y': 0.5}
        keep_data: True


<SearchWindow>:
    name: 'search'
    orientation: 'vertical'

    canvas:
        Color:
            rgba: 0.0, 0.0, 0.0, 1.0
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        id: search_layout_main
        orientation: 'vertical'

        Label:
            id: search_layout_number_label
            text: '9781617293702'
            padding_y: self.height / 3
            padding_x: 20
            multiline: False
            size_hint_y: 0.3
            pos_hint: {'center_x':0.5, 'y': 0.5}
            font_size: 20

        Label:
            id: seach_layout_messages_label
            text: 'type ISBN number'
            hint_text: ''
            font_size: 20
            size_hint_y: 0.1

        GridLayout:
            id: search_layout_keyboard_layout
            rows: 4
            cols: 3
            size_hint_y: 0.4

            Button:
                id: button_1
                text: '1'
                on_press: 
                    root.input_number(1)

            Button:
                id: button_2
                text: '2'
                on_press: 
                    root.input_number(2)

            Button:
                id: button_3
                text: '3'
                on_press: 
                    root.input_number(3)

            Button:
                id: button_4
                text: '4'
                on_press: 
                    root.input_number(4)

            Button:
                id: button_5
                text: '5'
                on_press: 
                    root.input_number(5)

            Button:
                id: button_6
                text: '6'
                on_press: 
                    root.input_number(6)

            Button:
                id: button_7
                text: '7'
                on_press: 
                    root.input_number(7)

            Button:
                id: button_8
                text: '8'
                on_press: 
                    root.input_number(8)

            Button:
                id: button_9
                text: '9'
                on_press: 
                    root.input_number(9)

            Button:
                id: button_del
                text: 'Del'
                on_press: 
                    root.delete_last_number()

            Button:
                id: button_0
                text: '0'
                on_press: 
                    root.input_number(0)

            Button:
                id: run
                text: 'Go!'
                disabled: False
                on_press: 
                    app.root.current = 'wait'

<ProblemWindow>:
    name: 'results'
    orientation: 'vertical'

    canvas:
        Color:
            rgba: 0.0, 0.0, 0.0, 1.0
        Rectangle:
            pos: self.pos
            size: self.size

            Label:
                id: problem_layout_message
                text: 'Unknown poblem occured!'
                padding_y: self.height / 3
                padding_x: 20
                multiline: False
                size_hint_y: 0.3
                pos_hint: {'center_x':0.5, 'y': 0.5}
                font_size: 20

